<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1><%= title %></h1>
  <% if (sucesso) { %><div class="success"><%= sucesso %></div><% } %>
  <% if (errors.geral) { %><div class="error"><%= errors.geral.msg %></div><% } %>
  <form method="post" action="/agendamento">
    <div class="field"><label>ID Administrador*</label><br/><input name="adminId" type="number" value="<%= data.adminId||'' %>" /> <% if (errors.adminId) { %><div class="error"><%= errors.adminId.msg %></div><% } %></div>
    <div class="field">
      <label>Médico*</label><br/>
      <select name="medicoId">
        <option value="">Selecione</option>
        <% medicos.forEach(m=> { %>
          <option value="<%= m.id %>" <%= (data.medicoId==m.id)?'selected':'' %>><%= (m.pessoa? m.pessoa.nome : ('Médico '+m.id)) %> - <%= m.crm %></option>
        <% }) %>
      </select>
      <% if (errors.medicoId) { %><div class="error"><%= errors.medicoId.msg %></div><% } %>
    </div>
    <div class="field">
      <label>Paciente*</label><br/>
      <select name="pacienteId">
        <option value="">Selecione</option>
        <% pessoas.forEach(p=> { %>
          <option value="<%= p.id %>" <%= (data.pacienteId==p.id)?'selected':'' %>><%= p.nome %> - <%= p.cpf %></option>
        <% }) %>
      </select>
      <% if (errors.pacienteId) { %><div class="error"><%= errors.pacienteId.msg %></div><% } %>
    </div>
    <div class="field"><label>Data/Hora*</label><br/><input name="dataHora" type="datetime-local" value="<%= data.dataHora||'' %>" /> <% if (errors.dataHora) { %><div class="error"><%= errors.dataHora.msg %></div><% } %></div>
    <button type="submit">Agendar</button>
  </form>
  <p><a href="/pessoas">Ver Pessoas</a> | <a href="/medicos/novo">Cadastrar Médico</a></p>
</body>
</html>
