<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1><%= title %></h1>
  <% if (sucesso) { %><div class="success"><%= sucesso %></div><% } %>
  <% if (errors.geral) { %><div class="error"><%= errors.geral.msg %></div><% } %>
  <form method="post" action="/agendamento">
    <div class="field">
      <label>Médico*</label><br/>
      <select name="medicoId">
        <option value="">Selecione</option>
        <% medicos.forEach(m=> { %>
          <option value="<%= m.id %>" <%= (data.medicoId==m.id)?'selected':'' %>><%= (m.pessoa? m.pessoa.nome : ('Médico '+m.id)) %> - <%= m.crm %></option>
        <% }) %>
      </select>
      <% if (errors.medicoId) { %><div class="error"><%= errors.medicoId.msg %></div><% } %>
    </div>
    <div class="field">
      <label>Paciente*</label><br/>
      <select name="pacienteId">
        <option value="">Selecione</option>
        <% pessoas.forEach(p=> { %>
          <option value="<%= p.id %>" <%= (data.pacienteId==p.id)?'selected':'' %>><%= p.nome %> - <%= p.cpf %></option>
        <% }) %>
      </select>
      <% if (errors.pacienteId) { %><div class="error"><%= errors.pacienteId.msg %></div><% } %>
    </div>
    <div class="field"><label>Data/Hora*</label><br/><input name="dataHora" type="datetime-local" value="<%= data.dataHora||'' %>" /> <% if (errors.dataHora) { %><div class="error"><%= errors.dataHora.msg %></div><% } %></div>
    <button type="submit">Agendar</button>
  </form>

  <h2>Abrir Agenda por CRM</h2>
  <form method="get" action="/medicos/agenda">
    <label>Médico</label>
    <select id="agenda-medico-crm" name="crm" required>
      <option value="">Selecione</option>
      <% (medicos || []).forEach(m=> { %>
        <option value="<%= m.crm %>"><%= (m.pessoa? m.pessoa.nome : ('Médico '+m.id)) %> - <%= m.crm %></option>
      <% }) %>
    </select>
    <label>Data</label>
    <input id="agenda-medico-data" name="data" type="date" />
    <button type="submit">Abrir Agenda</button>
  </form>

  <h2>Consultas agendadas</h2>
  <% if (!consultas || consultas.length===0) { %>
    <p>Sem consultas.</p>
  <% } else { %>
    <table>
      <thead><tr><th>ID</th><th>Médico</th><th>Paciente</th><th>Data/Hora</th><th>Status</th></tr></thead>
      <tbody>
        <% consultas.forEach(c=> { %>
          <tr>
            <td><%= c.id %></td>
            <td><%= (c.medico && c.medico.pessoa) ? c.medico.pessoa.nome : '-' %></td>
            <td><%= (c.paciente) ? c.paciente.nome : '-' %></td>
            <td><%= new Date(c.data).toLocaleString() %></td>
            <td><%= c.status %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <p><a href="/pessoas">Ver Pessoas</a> | <a href="/medicos/novo">Cadastrar Médico</a></p>
</body>
</html>
