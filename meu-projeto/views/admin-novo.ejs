<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1><%= title %></h1>
  <% if (errors.geral) { %><div class="error"><%= errors.geral.msg %></div><% } %>
  <form method="post" action="/admin">
    <div class="field">
      <label>Pessoa*</label><br/>
      <select name="pessoaId">
        <option value="">Selecione</option>
        <% pessoas.forEach(p=> { %>
          <option value="<%= p.id %>" <%= (data.pessoaId==p.id)?'selected':'' %>><%= p.nome %> - <%= p.cpf %></option>
        <% }) %>
      </select>
      <% if (errors.pessoaId) { %><div class="error"><%= errors.pessoaId.msg %></div><% } %>
    </div>
    <button type="submit">Promover</button>
  </form>
  <p><a href="/agendamento">Agenda</a> | <a href="/pessoas">Ver Pessoas</a></p>
</body>
</html>
